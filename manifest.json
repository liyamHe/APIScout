{
  "manifest_version": 3,
  "name": "APIScout Collector",
  "version": "0.1",
  "description": "Passively collect and visualize API endpoints discovered during web browsing",
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "extension/background-refactored.js"
  },
  "action": {
    "default_title": "APIScout"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "scout@local.ext",
      "strict_min_version": "109.0"
    }
  }
}
